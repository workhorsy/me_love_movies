
<div id="comment_container[<%=@counter%>]">
	<button id="btn_submit_comment" onclick="new Ajax.Updater('<%=@element_id%>', 
													'/title_reviews/_create_title_comment?' + 
																			'&title_id=<%=title_id%>' + 
																			'&review_id=<%=review_id%>', 
												{asynchronous: true, evalScripts: true, 
												onLoading: function(request){
															$('<%=@element_id%>').innerHTML='<img src=\'/images/ajax-loading.gif\' />';
														},
												parameters: {
													:authenticity_token => encodeURIComponent('<%=form_authenticity_token%>'), 
													:
												}); return false;">
	Submit your comment</button>
	 or 
	<a href="#" id="btn_comment" onclick="new Ajax.Updater('<%=@element_id%>', 
													'/title_reviews/_edit_title_comment', 
												{asynchronous: true, evalScripts: true, 
												onLoading: function(request){
															$('<%=@element_id%>').innerHTML='<img src=\'/images/ajax-loading.gif\' />';
														},
												parameters: 'authenticity_token=' + encodeURIComponent('<%=form_authenticity_token%>')}); return false;">
	don't</a>
</div>
